{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "target": "es6",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020",
      "es2017.object"
    ],
    // "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}